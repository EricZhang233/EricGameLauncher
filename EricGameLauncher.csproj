<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows10.0.26100</TargetFramework>
    <UseWinUI>true</UseWinUI>
    <RootNamespace>EricGameLauncher</RootNamespace>
    <AssemblyName>EricGameLauncher</AssemblyName>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>false</SelfContained>
    <RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
    <ErrorOnUnsupportedTargetingPlatformVersion>false</ErrorOnUnsupportedTargetingPlatformVersion>
    <AppxPackage>false</AppxPackage>
    <GenerateAppxPackageOnBuild>false</GenerateAppxPackageOnBuild>
    <WindowsAppSDKUsePrerelease>false</WindowsAppSDKUsePrerelease>
    <WindowsPackageType>None</WindowsPackageType>
    <DisablePriGeneration>true</DisablePriGeneration>
    <ApplicationIcon>ico.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>

    <!-- 自定义输出路径逻辑开始 -->
    <VersionFileContent>$([System.IO.File]::ReadAllText('$(MSBuildProjectDirectory)\Version.cs'))</VersionFileContent>
    <ExtractedVersion>$([System.Text.RegularExpressions.Regex]::Match($(VersionFileContent), `Version\s*=\s*"([^"]+)"`).Groups[1].Value)</ExtractedVersion>
    <LowerConfig Condition="'$(Configuration)' != ''">$([System.String]::Copy('$(Configuration)').ToLower())</LowerConfig>
    <LowerConfig Condition="'$(Configuration)' == ''">debug</LowerConfig>
    
    <OutputPath>output\$(ExtractedVersion)\$(LowerConfig)\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <!-- 自定义输出路径逻辑结束 -->
  </PropertyGroup>

  <Target Name="SyncVersion" BeforeTargets="BeforeBuild">
    <Exec Command="powershell -NoProfile -ExecutionPolicy Bypass -File SyncVersion.ps1" ConsoleToMSBuild="true" StandardOutputImportance="Low">
      <Output TaskParameter="ConsoleOutput" PropertyName="RawExtractedVersion" />
    </Exec>
    <PropertyGroup Condition="'$(RawExtractedVersion)' != ''">
      <Version>$(RawExtractedVersion)</Version>
      <AssemblyVersion>$(RawExtractedVersion)</AssemblyVersion>
      <FileVersion>$(RawExtractedVersion)</FileVersion>
    </PropertyGroup>
    <Message Importance="High" Text="Synced Version from Version.cs: $(RawExtractedVersion)" />
  </Target>

  <Target Name="ZipReleaseBuild" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <Message Importance="High" Text="正在将 Release 产物打包为 EricGameLauncher_$(ExtractedVersion).zip..." />
    <MakeDir Directories="output\$(ExtractedVersion)" />
    <ZipDirectory SourceDirectory="$(OutputPath)" 
                  DestinationFile="output\$(ExtractedVersion)\EricGameLauncher_$(ExtractedVersion).zip" 
                  Overwrite="true" />
  </Target>

  <ItemGroup>
    <PackageReference Include="Microsoft.WindowsAppSDK" Version="1.8.260101001" />
    <PackageReference Include="WinUIEx" Version="2.4.0" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.8" />
    <PackageReference Include="TinyPinyin.Net" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Package.appxmanifest" />
    <Content Include="ico.ico" />
    <Content Include="i18n.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="_old-version1.3.1\**" />
    <EmbeddedResource Remove="_old-version1.3.1\**" />
    <None Remove="_old-version1.3.1\**" />
    <Page Remove="_old-version1.3.1\**" />
    <Content Remove="readme_res\**" />
    <Compile Remove="readme_res\**" />
    <EmbeddedResource Remove="readme_res\**" />
    <None Remove="readme_res\**" />
    <Page Remove="readme_res\**" />
  </ItemGroup>

</Project>


